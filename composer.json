{
    "name": "rcp-soft/phpcs",
    "description": "RCP Soft's PHP coding standard",
    "type": "phpcodesniffer-standard",
    "require": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "post-package-install": "vendor/bin/phpcs --config-set default_standard rcpsoft"
    }
}
